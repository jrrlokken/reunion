<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/reunion.css">
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>
    <div class="backdrop"></div>
    <main>
      <% if (reunions.length > 0) { %>
      <div class="grid">
        <% for (let reunion of reunions) { %>
          <article class="card reunion-item">
            <header class="card__header">
              <h1 class="reunion-title">
                  <%= reunion.title %>
              </h1>
            </header>
            <div class="card__image">
              <img src="<%= reunion.images[0] %>" alt="<%= reunion.title %>">
            </div>
            <div class="card__content">
              <h2 class="reunion-year">
                  <%= reunion.year %>
              </h2>
              <p class="reunion-description">
                  <%= reunion.description %>
              </p>
            </div>
            <div class="card__actions">
              <a href="/reunions/<%= reunion._id %>" class="btn btn-primary">Details</a>
            </div>
          </article>
        <% } %>
      </div>
      <% } else { %>
        <div class="emptyPage-container">
          <h1>No Reunions Found</h1>
        </div>
      <% } %>
    </main>
    
    <%- include('../includes/end.ejs') %>