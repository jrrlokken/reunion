<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/reunion.css">
  <link rel="stylesheet" href="/css/carousel.css">
  <link rel="stylesheet" href="/css/comments.css">
</head>

<body>
  <div class="backdrop-noimage"></div>
<%- include('../includes/navigation.ejs') %>
  <main class="reunion-container">
    <% if (errorMessage) { %> 
      <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <div class="reunion-details">
      <div class="reunion-title">
        <h1><%= reunion.year %>: <%= reunion.title %></h1>
      </div>
      <% if (reunion.images) { %>
      <% if (reunion.images?.length <= 1) { %>
        <div>
          <img class="image" src="<%= reunion.images[0] %>" alt="<%= reunion.title %>">
        </div>
      <% } else { %>
      <%- include('../includes/carousel.ejs') %>
      <% } %> 
      <% } %>
      <div class="description-text">
        <p><%= reunion.description %></p>
      </div>
    </div>
    <hr>
    <%- include('../includes/comments.ejs') %>
    <div class="margin-30 centered">
      <button class="btn btn-primary" onClick="history.back()">Back</button>
    </div>
  </main>
<%- include('../includes/end.ejs') %>