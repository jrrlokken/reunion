<div class="backdrop"></div>
<header class="main-header sticky">
  <!-- <button id="side-menu-toggle">Menu</button> -->
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <% if (isAuthenticated) { %>
      <li class="main-header__item">
        <a class="<%= path === '/reunions' ? 'active' : '' %>" href="/reunions"
          >Reunions</a
        >
      </li>
      <li class="main-header__item">
        <a
          class="<%= path === '/reunions/624e44292893664bc90fbfe7' ? 'active' : '' %>"
          href="/reunions/624e44292893664bc90fbfe7"
          >Upcoming Reunion</a
        >
      </li>
      <% if (isAdmin) { %>
      <li class="main-header__item">
        <a
          class="<%= path === '/admin/reunions' ? 'active' : '' %>"
          href="/admin/reunions"
          >Your Reunions</a
        >
      </li>
      <li class="main-header__item">
        <a
          class="<%= path === '/admin/add-reunion' ? 'active' : '' %>"
          href="/admin/add-reunion"
          >Add Reunion</a
        >
      </li>
      <% } %> <% } %>
    </ul>
    <ul class="main-header__item-list">
      <% if (!isAuthenticated) { %>
      <li class="main-header__item">
        <a class="<%= path === '/login' ? 'active' : '' %>" href="/login"
          >Login</a
        >
      </li>
      <!-- <li class="main-header__item">
        <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup"
          >Sign Up</a
        >
      </li> -->
      <% } else { %>
      <li class="main-header__item">
        <form action="/logout" method="post">
          <input type="hidden" name="_csrf" value="<%=  csrfToken %>" />
          <button type="submit">Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>

